{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES5",
    "noImplicitAny": true,
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "dist",

    "baseUrl": "./",

    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
